{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mcpf.dev/schemas/agent-credential-v1.json",
  "title": "Agent Credential",
  "description": "Verifiable Credential for AI agent registration",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject", "proof"],
  "properties": {
    "@context": {
      "type": "array",
      "contains": {"const": "https://www.w3.org/2018/credentials/v1"}
    },
    "type": {
      "type": "array",
      "contains": {"enum": ["VerifiableCredential", "AgentCredential"]}
    },
    "issuer": {"type": "string", "pattern": "^did:"},
    "issuanceDate": {"type": "string", "format": "date-time"},
    "credentialSubject": {
      "type": "object",
      "required": ["id", "name", "role", "capabilities"],
      "properties": {
        "id": {"type": "string", "pattern": "^did:"},
        "name": {"type": "string"},
        "role": {"type": "string", "enum": ["orchestrator", "specialist", "interface", "monitor"]},
        "capabilities": {"type": "array", "items": {"type": "string"}},
        "delegationScope": {"type": "array", "items": {"type": "string"}},
        "organization": {"type": "string"}
      }
    },
    "credentialStatus": {
      "type": "object",
      "required": ["id", "type", "statusListIndex", "statusListCredential"],
      "properties": {
        "id": {"type": "string"},
        "type": {"const": "StatusList2021Entry"},
        "statusListIndex": {"type": "string"},
        "statusListCredential": {"type": "string"}
      }
    }
  }
}
